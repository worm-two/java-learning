<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.taoyuan.learning.mybatis.dao.SwordSectDao">

    <resultMap type="com.taoyuan.learning.cloud.dream.lake.SwordSect" id="SwordSectMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="alias" column="alias" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="poem" column="poem" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SwordSectMap">
        select id,
               name,
               alias,
               sex,
               poem,
               address
        from sword_sect
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SwordSectMap">
        select
        id, name, alias, sex, poem, address
        from sword_sect
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="alias != null and alias != ''">
                and alias = #{alias}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="poem != null and poem != ''">
                and poem = #{poem}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sword_sect
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="alias != null and alias != ''">
                and alias = #{alias}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="poem != null and poem != ''">
                and poem = #{poem}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into sword_sect(name, alias, sex, poem, address)
        values (#{name}, #{alias}, #{sex}, #{poem}, #{address})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sword_sect(name, alias, sex, poem, address)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.alias}, #{entity.sex}, #{entity.poem}, #{entity.address})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into sword_sect(name, alias, sex, poem, address)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.alias}, #{entity.sex}, #{entity.poem}, #{entity.address})
        </foreach>
        on duplicate key update
        name = values(name),
        alias = values(alias),
        sex = values(sex),
        poem = values(poem),
        address = values(address)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sword_sect
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="alias != null and alias != ''">
                alias = #{alias},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="poem != null and poem != ''">
                poem = #{poem},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from sword_sect
        where id = #{id}
    </delete>

</mapper>

